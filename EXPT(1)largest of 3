#include <iostream>

int main () {
    std::cout<<"Enter three numbers : \n";
    double num1,num2,num3;
    std::cin>>num1>>num2>>num3;

    double largest;

    if(num1 > num2 && num1 > num3)
    {
        largest = num1;
    }
    else if(num2 > num1 && num2 > num3)
    {
        largest = num2;
    }
    else
    {
        largest = num3;
    }

    std::cout<<"The largest number is : "<<largest<<"\n";
    return 0;
}
